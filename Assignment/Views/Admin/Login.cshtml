@model Assignment.Models.ViewModels.ViewLogin

<div class="text-danger" asp-validation-summary="All"></div>
<div class="row mt-5">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin ctn-dn shadow-lg">
            <div class="card-body">
                <h2 class="card-title text-center font-weight-bold">Đăng Nhập</h2>
                    <form asp-action="Login" method="post" class="form-signin">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-label-group">
                            <label asp-for="UserName">Tên tài khoản</label>
                            <input asp-for="UserName" type="text" class="form-control" placeholder="Username"/>
                        </div>
                        <div class="form-label-group mt-3">
                            <label asp-for="Password">Mật khẩu</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        </div>
                        <button class="btn font-weight-bold btn-lg btn-info btn-block text-uppercase mt-3" type="submit">Đăng nhập</button>
                    </form>
            </div>
        </div>
    </div>
</div>