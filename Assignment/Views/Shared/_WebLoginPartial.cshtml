@using Assignment.Models
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Extensions
@using Assignment.Constants

@{string Email = Context.Session.GetString(SessionKey.Khachhang.KH_Email);}
@{string fullName = Context.Session.GetString(SessionKey.Khachhang.KH_FullName);}
@{string cart = Context.Session.GetString("cart");}

<style>
    button{
        border:none;
        background-color:white;
    }
        button:hover {
            border-radius: 5px;
            border:none;
            background-color: #e4002b;
        }
    .btn-txt {
        padding: 6.5%;
        width: 200px;
        border: none;
        display: inline-block;
        font-weight: bold;
        color: black;
        text-decoration: none;
    }
    .btn-txt:hover {
        color: black;
        text-decoration: none;
    }
    .btn-a {
        width: 110px;
       margin: auto;
        padding: 10%;
        border:none;
        display: inline-block;
        font-weight: bold;
        color: black;
        text-decoration: none;
    }
        .btn-a:hover {
            border:none;
            text-decoration: none;
            color: white;
        }
    .btn-rg {

        width: 70%;
        display: block;
        background-color: white;
    }
    .btn-rg:hover {
        border:none;
   border-radius: 5px;
        background-color: #e4002b;
    }
  .btn-dky{
      margin-left: 10%;
  }
  .btn-hang {
      margin-left: 5%;
  }
</style>

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-dark" id="cart" href="/Home/Cart">
            @if (cart != null && cart != "")
            {
                <img id="imgCart" src="~/images/MonAn/cart2.png" style="width:30px" />
            }
            else
            {
                <img id="imgCart" src="~/images/MonAn/cart02.png" style="width:30px" />
            }
        </a>
    </li>
    @if (Email != null && Email != "")
    {
        <li class="nav-item">
            <a id="information" class="btn-txt" href="/Home/Info">Xin chào <div class="font-weight-bold text-danger" style="display:inline-block;">@fullName</div> !</a>
        </li>
        <li class="nav-item btn-rg">
            <a class="btn-a btn-hang" href="/Home/History">Đơn hàng</a>
        </li>
        <li class="nav-item">
            <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                <button  type="submit" class="btn-a">Đăng Xuất</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item btn-rg">
            <a class="btn-a btn-dky" id="register" href="/Home/Register">Đăng Ký</a>
        </li>
        <li class="nav-item btn-rg">
            <a class="btn-a" id="login" href="/Home/Login">Đăng Nhập</a>
        </li>
    }
</ul>

<script>
    function Login() {
        alert("hello");
    }
</script>
