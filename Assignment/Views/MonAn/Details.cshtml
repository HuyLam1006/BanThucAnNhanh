@model Assignment.Models.MonAn

@{
    ViewData["Title"] = "Details";
}

<style>

    dl {
        border: 3px double #ccc;
        padding: 0.5em;
        display: flex;
        flex-flow: row wrap;
        border: solid #333;
    }

    dt {
        flex-basis: 20%;
        padding: 2px 4px;
        background: #333;
        text-align: right;
        color: #fff;
        float: left;
        clear: left;
    }

        dt::after {
            content: ":";
        }

    dd {
        flex-basis: 70%;
        flex-grow: 1;
        margin: 0;
        padding: 2px 4px;
        border-bottom: 1px solid #333;
        padding: 0 0 0.5em 0;
    }
</style>


<div>
    <center><h2 class="font-weight-bold text-danger text-uppercase">Chi tiết món ăn</h2></center>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phanloai)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phanloai)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hinh)
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/Monan/@Model.Hinh" style="width:250px" />
            @*@Html.DisplayFor(model => model.Hinh)*@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mota)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trangthai)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trangthai)
        </dd>
    </dl>
</div>
<div>
    <a class="text-decoration-none adesi" asp-action="Edit" asp-route-id="@Model.MonAnID">Chỉnh sửa</a> |
    <a class="text-decoration-none adesi" asp-action="Index">Trở về món ăn</a>
</div>
